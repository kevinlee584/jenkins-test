pipeline {

  agent any

  options {
    // This is required if you want to clean before build
    skipDefaultCheckout(true)
  }

  stages {
    stage('Clean') {
      steps {
          sh 'ls'
          cleanWs()
          sh 'ls'
      }
    }

    stage('Checkout') {
      steps {
        sh 'ls'
        checkout scm
        sh 'ls'
      }
    }

    stage('Run') {
      steps {
        sh 'python3 main.py'
      }
    }
  }
}