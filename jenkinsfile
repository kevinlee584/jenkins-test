pipeline {

  agent any

  options {
    // This is required if you want to clean before build
    skipDefaultCheckout(true)
  }

  stages {
    stage('Clean') {
      steps {
          sh 'pwd'
          cleanWs()
          sh 'pwd'
      }
    }

    stage('Checkout') {
      steps {
        sh 'pwd'
        checkout scm
        sh 'pwd'
      }
    }

    stage('Run') {
      steps {
        sh 'python3 main.py'
      }
    }
  }

  post {
    always {
      cleanWs(patterns: [[pattern: '.py', type: 'EXCLUDE']])
    }
  }
}